<% include partials/header %>

<div class="ui main text container segment">
  <header class="ui huge header"><%= blog.title %></header>
  <div class="ui top attached">
    <div class="item">
      <img src="<%= blog.image %>" alt="<%= blog.title %>" class="ui image centered rounded">
    </div>
    <div class="content">
      <span><%= blog.created.toDateString() %></span>
    </div>
    <article class="description">
      <p><%- blog.body %></p>
    </article>
</div>
</div>

<% include partials/footer %>
