<% include partials/header %>

<div class="ui main text container segment">
  <header class="ui huge header"><%= blog.title %></header>
  <div class="ui top attached">
    <div class="item">
      <img src="<%= blog.image %>" alt="<%= blog.title %>" class="ui image centered rounded">
    </div>
    <div class="content">
      <span><%= blog.created.toDateString() %></span>
    </div>
    <article class="description">
      <p><%- blog.body %></p>
    </article>
    <a href="/blogs/<%= blog._id %>/edit" class="ui button orange">Edit</a>
    <form id="deleteForm" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
      <button type="submit" class="ui button red">Delete</button>
    </form>
</div>
</div>

<% include partials/footer %>
